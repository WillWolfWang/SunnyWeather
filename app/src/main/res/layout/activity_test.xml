<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_light"
            tools:srcCompat="@tools:sample/avatars"
            android:visibility="gone"/>

        <com.will.sunnyweather.weight.BiggerView
            android:id="@+id/biggerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

        <com.will.sunnyweather.weight.BiggerView2
            android:id="@+id/biggerView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>


        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_location" />
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_magnifier"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_target"
        app:layout_constraintBottom_toBottomOf="@id/iv_magnifier"
        app:layout_constraintEnd_toEndOf="@id/iv_magnifier"
        app:layout_constraintStart_toStartOf="@id/iv_magnifier"
        app:layout_constraintTop_toTopOf="@id/iv_magnifier"
        />

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="隐藏"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="显示"
        app:layout_constraintStart_toEndOf="@+id/btn_hide"
        app:layout_constraintTop_toTopOf="@+id/btn_hide" />
</androidx.constraintlayout.widget.ConstraintLayout>